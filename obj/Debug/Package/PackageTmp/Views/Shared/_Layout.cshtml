<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Controle de equipamentos", "Index", "Home", null,  new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <li class=" navbar-nav menu-item">
                    <span class="menu-link">
                        Cadastros
                    </span>
                    <ul class="no-bullet menu-sub">
                        <li class="menu-sub-item">
                        <li>@Html.ActionLink("Empresa", "Index", "Empresa", null, new { @class = "menu-sub-link" })</li>
                        <li>@Html.ActionLink("Items", "Index", "Items", null, new { @class = "menu-sub-link" })</li>
                </li>
                </ul>
                </li>

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Desktop", "Index", "Desktop")</li>
                    <li>@Html.ActionLink("Colaborador", "Index", "Colaborador")</li>
                    <li>@Html.ActionLink("Printer", "Index", "Printer")</li>
                    <li>@Html.ActionLink("Voip", "Index", "Voip")</li>
                    <li>@Html.ActionLink("Smart Phone", "Index", "SmartPhone", new { area = "Telefonia" }, null)</li>
                </ul>

                <p class="nav navbar-text navbar-right "><a href="http://www.grieg.com.br" style="color: #999999">Sair</a></p>
                @*// formatando nome user*@ 
                <p class="nav navbar-text navbar-right">Olá, @(User.Identity.Name.ToString().Replace(@"VMWEB\", " "))!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Inventario &copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
