@model IEnumerable<IntraGriegHomolog.Models.CAD_ITEM>

@{
    ViewBag.Title = "Items";
}

<h2>Items </h2>
@if (TempData["Mensagem"] != null)
{
    <div class="@TempData["typeMensagem"] " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p>@TempData["Mensagem"]</p>
    </div>
}

<hr />
@using (Html.BeginForm("Index", "Items", FormMethod.Post))
{
    <table>
        @Html.AntiForgeryToken()
        <tr>
            <th style="padding-right: 25px;"> @Html.DropDownList("Tipo", (IEnumerable<SelectListItem>)ViewBag.tipo, new { @class = "form-control", @id = "Tipo" })  </th>
            <th style="padding-right: 25px;"> @Html.Editor("Descricao", new { htmlAttributes = new { @class = "form-control", @placeholder = "Descrição" } })          </th>
            <th style="padding-right: 10px;"> <button type="submit" class="glyphicon glyphicon-search  btn btn-primary btn-sm"></button>                            </th>
        </tr>
    </table>
    <hr />
}
<p>
    @Html.ActionLink(" Novo", "Create", null, new { @class = "glyphicon glyphicon-plus btn btn-primary btn-sm" })
</p>
<div style="display:@(Model.Count() > 0 ?"block":"none")">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CAD_ITEM_TYPE.descs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descs)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CAD_ITEM_TYPE.descs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descs)
                </td>
                <td>
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon glyphicon-remove  btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
